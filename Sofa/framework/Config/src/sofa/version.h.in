#pragma once

#cmakedefine SOFA_VERSION_STR @SOFA_VERSION_STR@

// We use version numbers based on the date: yy.mm.pp (year, month, patch).
// - SOFA_VERSION / 10000 is the year number
// - SOFA_VERSION / 100 % 100 is the month number
// - SOFA_VERSION % 100 is the patch number
#cmakedefine SOFA_VERSION @SOFA_VERSION@

namespace sofa
{

// CMake configuration build information
#define SOFA_BUILD_TYPE CMAKE_SOFA_BUILD_TYPE

#define STRINGIFY(x) #x
#define TOSTRING(x) STRINGIFY(x)

constexpr const char* SofaBuildType = TOSTRING(SOFA_BUILD_TYPE);

#undef TOSTRING
#undef STRINGIFY

}
